<body>
    {% include 'navbar.twig' %}
    <div class="container">
        <h1>Rediger video</h1>
        <form action="../../src/editVideoFormHandler.php" method="post" enctype="multipart/form-data">
            <label for="title">Tittel:</label> <input type="text" name="title" id="title" value="{{video.title}}" /><br />
            <label for="descr">Beskrivelse:</label><br /><textarea name="descr" id="descr" cols="100" rows="10">{{video.description}}</textarea><br />
